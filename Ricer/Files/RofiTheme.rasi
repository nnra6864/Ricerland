* {
	background-col: rgba(ricer.col.background.rgb, 0.5);
	background-selected-col: rgba(ricer.col.background_highlight.rgb, 0.1);
	text-col: #ricer.col.foreground.hex;
	text-selected-col: #ricer.col.foreground_alt.hex;
	border-col: #ricer.col.outline.hex;

    background-color: transparent;
    transparency: "real";
    highlight: underline bold #ricer.col.foreground_highlight_alt.hex;
}

window {
    location: center;
    anchor: center;
	width: 20%;
	height: 40%;
    border: 0%;
    border-radius: ricer.val.rounding\px;

	fullscreen: false;
    children: [mainbox];
    orientation: horizontal;
    spacing: 0;
}


mainbox {
    spacing: 0;
    children: [ inputbar, message, listview ];
}

message {
    padding: 5;
    border-color: @border-col;
    border-radius: ricer.val.rounding\px;
    border:  0 ricer.val.outline_size\px ricer.val.outline_size\px ricer.val.outline_size\px;
}

inputbar {
    color: @text-col;
    padding: 16px;
    background-color: @background-col;

    border: ricer.val.outline_size\px;
    border-radius: ricer.val.rounding\px ricer.val.rounding\px 0 0;
    border-color: @border-col;
}

entry, prompt, case-indicator {
    text-font: inherit;
    text-color: inherit;
}

prompt {
    margin: 0 1em 0 0;
}

listview {
    padding: 0;
    border-radius: 0 0 ricer.val.rounding\px ricer.val.rounding\px;
    border-color: @border-col;
    border: 0 ricer.val.outline_size\px ricer.val.outline_size\px ricer.val.outline_size\px;
    background-color: @background-col;
    dynamic: false;
}

element {
    padding: 15px 25px 15px 6px;
    vertical-align: 0.5;
    border-radius: 0;
    background-color: transparent;
    color: @text-col;
    text-color: @text-col;
}

element-icon{
	size: 1em;
	padding: 0 25px 0 0;
}

element selected.normal {
	background-color: @background-selected-col;
	text-color: @text-selected-col;
}

element-text, element-icon {
    background-color: transparent;
    text-color: inherit;
}

button {
    padding: 6px;
    color: @text-col;
    horizontal-align: 0.5;

    border: ricer.val.outline_size\px 0 ricer.val.outline_size\px ricer.val.outline_size\px;
    border-radius: 0;
    border-color: @border-col;
}

button selected normal {
    border: ricer.val.outline_size\px 0 ricer.val.outline_size\px ricer.val.outline_size\px;
    border-color: @border-col;
}
